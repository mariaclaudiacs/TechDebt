@using System.Data.SqlClient
@using TechDebt.Utils.Database
@using TechDebt.Utils.Entities
@model LoanModel
@{
	ViewData["Title"] = "Simulador";
}

<div>
	<h3>Simulação de Empréstimo</h3>
	<form asp-controller="Emprestimo" asp-action="Simulador" method="post">
  <div class="mb-3">
	<label for="valorEmprestimo" class="form-label">Valor do Empréstimo</label>
	<input asp-for="Valor" type="text" class="form-control" id="valorEmprestimo">
  <div class="mb-3">
	<label for="parcelas" class="form-label" >Número de Anos</label>
	<input asp-for="Anos" type="number" class="form-control" id="parcelas">
  </div>
  <div>
	  <label for="bancos" class="form-label">Banco:</label>
	  <select name="bancos" id="bancos">
		<option value="caixa">Caixa Econômica Federal</option>
		<option value="itau">Itaú Unibanco</option>
		<option value="santander">Banco Santander</option>
		<option value="bradesco">Banco Bradesco</option>
	</select>
  </div>

  <br>
  <div>
		<h4>Modalidade</h4>

		<input type="radio" name="modalidade" value="pessoal"> Pessoal

		<input type="radio" name="modalidade" value="veicular"> Veicular
	</div>
  <br>
  <button type="submit" class="btn btn-warning" asp-action="Simulador">Conluir</button>
  <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
	<div class="mb-3">
	<label for="result" class="form-label">Valor do Empréstimo</label>
	<input asp-for="Valor" type="text" class="form-control" id="result">

	<label for="result2" class="form-label">Valor da Parcela</label>
	<input asp-for="Anos" type="text" class="form-control" id="result2">

	<label for="result3" class="form-label"></label>
	<input asp-for="valorJuros" asp-action="" type="text" class="form-control" id="result3">
	
	

  </div>
</form>

</div>