@model UserModel
@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h3>Confirmação de exclusão</h3>
    <form asp-controller="Users" asp-action="Delete" method="post">
        <p>Você tem certeza que quer deletar o usuário @Model.Nome?</p>

        <a id="botaoExcluirConfirmacao" class="btn" asp-controller="Users" asp-action="Index">Não</a>
        <button id="botaoConfirmarExclusao" type="submit" class="btn">Sim</button>
    </form>
</div>