@model BankModel
@{
    ViewData["Title"] = "Bancos";
}

<div class="text-center">
    <h1 style="color:red;">Confirmação de exclusão</h1>
    <form asp-controller="Banks" asp-action="DeleteBank" method="post">
        <br>
        <h4>Você tem certeza que quer deletar o banco @Model.Nome?</h4>
        <br />
        <a id="botaoExcluirConfirmacao" style="position: relative; right:50;" class="btn" asp-controller="Banks" asp-action="Index">Não</a>
        <button id="botaoConfirmarExclusao" style="position: relative; left:50;" type="submit" class="btn">Sim</button>
    </form>
</div>
